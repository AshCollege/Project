#* @vtlvariable name="hishgadPackages" type="java.util.ArrayList<com.example.Objects.HishgadPackageObject>" *#
#* @vtlvariable name="historyOrders" type="java.util.ArrayList<com.example.Objects.OrderObject>" *#
#* @vtlvariable name="clients" type="java.util.ArrayList<com.example.Objects.ClientObject>" *#
#* @vtlvariable name="creditObject" type="com.example.Objects.CreditObject" *#
#* @vtlvariable name="creditObjectList" type="java.util.ArrayList<com.example.Objects.CreditObject>" *#
#* @vtlvariable name="creditRefundObject" type="com.example.Objects.CreditRefundObject" *#
#* @vtlvariable name="creditRefundObjectList" type="java.util.ArrayList<com.example.Objects.CreditRefundObject>" *#
#* @vtlvariable name="templateUtils" type="com.example.Utils.TemplateUtils" *#
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>$pageName</title>
    #parse( "css.vm" )
    #parse( "scripts.vm" )
</head>

<body>

<div id="wrapper" style="padding-right: 135px">

    #parse( "main_navbar.vm" )

    <div id="page-wrapper">

        #parse("date_section.vm")

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        <small>$pageName</small>
                    </h1>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-2">
                    $templateUtils.getTranslation("Sum Of Cupons:") <input class="form-control" type="number" id="cuponsSum" value="$creditObject.cuponsSum"/>
                </div>
            </div>

            <br/>

            <div class="row">
                <div class="col-lg-2">
                    $templateUtils.getTranslation("Sum Of Refund:") <input class="form-control" type="number" id="refundSum" value="$creditObject.redundSum"/>
                </div>
                <div class="col-lg-2">
                    $templateUtils.getTranslation("Due Date:") <input class="form-control" type="date" id="refundDate" value="$creditRefundObject.refundSum"/>
                </div>
            </div>

            <div class="row" style="margin-top: 10px">
                <div class="col-lg-2">
                    <button type="button" class="btn btn-success save-button" id="saveCredit" style="">$templateUtils.getTranslation("Save")</button>
                </div>
            </div>
            <br/>


            <div class="row">
                <div class="col-lg-4">
                    <h2>$templateUtils.getTranslation("Credit Cupons History")</h2>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>$templateUtils.getTranslation("Date") </th>
                                <th>$templateUtils.getTranslation("Copuns Sum") </th>
                            </tr>
                            </thead>
                            <tbody>
                                #foreach($creditObject in $creditObjectList)
                                <tr>
                                    <td>$templateUtils.formatDateExcludeTime($creditObject.date)
                                    </td>
                                    <td>$creditObject.cuponsSum
                                    </td>
                                </tr>
                                #end
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="col-lg-4">
                    <h2>$templateUtils.getTranslation("Credit Refund History")</h2>
                    <h2>$templateUtils.getTranslation("Credit Refund History")</h2>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>$templateUtils.getTranslation("Credit Refund History") </th>
                                <th>$templateUtils.getTranslation("Refund Sum") </th>
                            </tr>
                            </thead>
                            <tbody>
                                #foreach($creditRefundObject in $creditRefundObjectList)
                                <tr>
                                    <td>$templateUtils.formatDateExcludeTime($creditRefundObject.date)
                                    </td>
                                    <td>$creditRefundObject.refundSum
                                    </td>
                                </tr>
                                #end
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>



            <div id="AddedCreditSuccess" class="alert alert-info center-absolute center-screen"
                 style="display: none;  width: 500px">
                <strong>$templateUtils.getTranslation("Success Adding Credit")</strong>
            </div>
            <div id="AddedCreditFailure" class="alert alert-danger center-absolute center-screen"
                 style="display: none;  width: 200px">
                <strong>$templateUtils.getTranslation("Adding Credit Failed")</strong>
            </div>
            <div id="AddedCreditFailureNoDate" class="alert alert-danger center-absolute center-screen"
                 style="display: none;  width: 200px">
                <strong>$templateUtils.getTranslation("Fill Refund Date")</strong>
            </div>

        </div>

    </div>

</div>
<div style="display: none" id="changesSaved" saved="true"></div>
    #parse("unsaved_changes_message.vm")


</body>

</html>
