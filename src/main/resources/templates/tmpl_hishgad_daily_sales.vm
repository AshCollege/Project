#* @vtlvariable name="hishgadPackages" type="java.util.ArrayList<com.example.Objects.HishgadPackageObject>" *#
#* @vtlvariable name="historyOrders" type="java.util.ArrayList<com.example.Objects.OrderObject>" *#
#* @vtlvariable name="hishgadDailySales" type="com.example.Objects.HishgadDailySalesObject" *#
#* @vtlvariable name="templateUtils" type="com.example.Utils.TemplateUtils" *#


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>$pageName</title>
    #parse( "css.vm" )
    #parse( "scripts.vm" )
</head>

<body>

<div id="wrapper" style="padding-right: 135px">

    #parse( "main_navbar.vm" )

    <div id="page-wrapper">

        #parse("date_section.vm")


        <div class="container-fluid">


            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        <small>$pageName</small>
                    </h1>
                    <ol class="breadcrumb">
                        <li class="active">
                            <i class="fa fa-dashboard"></i> $templateUtils.getTranslation("Hishgad Daily Sales")
                        </li>
                    </ol>
                </div>
            </div>



            <div id="addOrderForm">
                #if($hishgadDailySales) #set($sum = $hishgadDailySales.sum) #else #set($sum = 0) #end

                <input hidden id="previousSum" value="$sum">

                <div class="row">
                    <div class="col-lg-2">

                        <div class="alert alert-warning">
                            <strong>$templateUtils.getTranslation("Sum Of Sales:")</strong> <span id="sumHishgadSales"> $sum </span>
                            <div><button type="button"  class="btn btn-success save-button" id="saveHishgadSales" style="display: none;">$templateUtils.getTranslation("Save")</button></div>
                        </div>
                    </div>
                </div>

                <br>

                <!-- /.row -->
                <div class="row" id="hishgadDailySalesTable">
                    <div class="col-lg-7">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                <tr>
                                    <th style="width: 15%">$templateUtils.getTranslation("Name")</th>
                                    <th>$templateUtils.getTranslation("Old Amount")</th>
                                    <th>$templateUtils.getTranslation("New Amount")</th>
                                    <th>$templateUtils.getTranslation("Difference")</th>
                                    <th>$templateUtils.getTranslation("Price")</th>
                                    <th>$templateUtils.getTranslation("Remove")</th>
                                </tr>
                                </thead>
                                <tbody>
                                    #foreach ($hishgadPackage in $hishgadPackages)
##                                        #if($hishgadPackage.getRemaining() > 0)
                                        <tr oid="$hishgadPackage.oid"  id="package-row-$hishgadPackage.oid">
                                            <td class="package-name" oid="$hishgadPackage.oid" id="package-name-$hishgadPackage.oid">$hishgadPackage.name <input oid="$hishgadPackage.oid"  value="$hishgadPackage.name" id="edit-package-$hishgadPackage.oid" style="display: none" class="form-control edit-package-name"/></td>
                                            <td id="old-amount-$hishgadPackage.oid">$hishgadPackage.remaining</td>
                                            <td><input class="form-control new-amount" oid="$hishgadPackage.oid" type="number" id="new-amount-$hishgadPackage.oid"/></td>
                                            <td id="difference-$hishgadPackage.oid">0</td>
                                            <td id="price-$hishgadPackage.oid">$hishgadPackage.ticketPrice</td>
                                            <td><button type="button" class="btn btn-danger remove-package" oid="$hishgadPackage.oid">$templateUtils.getTranslation("Remove")</button></td>
                                        </tr>
##                                        #end
                                    #end
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>



            </div>


        </div>

    </div>

    <div id="AddedHishgadDailySalesSuccess" class="alert alert-info center-absolute center-screen"
         style="display: none; width: 500px;">
        <strong>$templateUtils.getTranslation("Success Adding Hishgad Daily Sales")</strong>
    </div>
    <div id="AddedHishgadDailySalesFailure" class="alert alert-danger center-absolute center-screen"
         style="display: none;  width: 200px">
        <strong>$templateUtils.getTranslation("Adding Hishgad Daily Sales Failed")</strong>
    </div>
    <div id="removePackageFailure" class="alert alert-danger center-absolute center-screen"
         style="display: none;  width: 200px">
        <strong>$templateUtils.getTranslation("Error Removing Package")</strong>
    </div>

    <div id="changePackageNameFailure" class="alert alert-danger center-absolute center-screen"
         style="display: none;  width: 200px">
        <strong>$templateUtils.getTranslation("Error Changing Package Name")</strong>
    </div>



</div>
<div style="display: none" id="changesSaved" saved="true"></div>
    #parse("unsaved_changes_message.vm")


</body>

</html>
