#* @vtlvariable name="hishgadPackages" type="java.util.ArrayList<com.example.Objects.HishgadPackageObject>" *#
#* @vtlvariable name="historyOrders" type="java.util.ArrayList<com.example.Objects.OrderObject>" *#
#* @vtlvariable name="clients" type="java.util.ArrayList<com.example.Objects.ClientObject>" *#
#* @vtlvariable name="templateUtils" type="com.example.Utils.TemplateUtils" *#
#* @vtlvariable name="sumDebtsByDate" type="java.util.TreeMap<java.util.Date, java.lang.String>" *#
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>$pageName</title>
    #parse( "css.vm" )
    #parse( "scripts.vm" )
</head>

<body>

<div id="wrapper" style="padding-right: 135px">

    #parse( "main_navbar.vm" )

    <div id="page-wrapper">

        #parse("date_section.vm")

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        <small>$templateUtils.getTranslation($pageName)</small>
                    </h1>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-2">
                    <div class="panel panel-yellow">
                        <div class="panel-heading">
                            <h3 class="panel-title">$templateUtils.getTranslation("Sum Debts")</h3>
                        </div>
                        <div class="panel-body">
                            $templateUtils.getTranslation("Sum Of All Debts:", "$sumAllDebts")
                        </div>
                    </div>
                </div>
                <div class="col-sm-10">
                    <div id="container" style="min-width: 310px; height: 250px; margin: 0 auto" dir="ltr"></div>
                </div>

            </div>


            <div class="row">
                <div class="col-lg-8">
                    <h2>$templateUtils.getTranslation("Existing Clients")</h2>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>$templateUtils.getTranslation("Name") </th>
                                <th>$templateUtils.getTranslation("Debt")</th>
                                <th>$templateUtils.getTranslation("Last Transaction")</th>
                                <th>$templateUtils.getTranslation("Remove")</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr id="currentClient" style="display: none;">
                                <td id="currentClientName"></td>
                                <td>0</td>
                                <td>-</td>
                                <td><button type="button" class="btn btn-danger">-</button></td>
                            </tr>

                                #foreach($client in $clients)
                                <tr oid="$client.oid" id="client-row-$client.oid">
                                    <td class="client-name"><a href="/client-debts.html?clientOid=$client.oid">$client.name</a></td>
                                    <td id="debt-$client.oid">$client.debt</td>
                                    <td class="last-transaction">#if ($client.lastTransactionDate) $templateUtils.formatDateExcludeTime($client.lastTransactionDate) #else - #end</td>
                                    <td><button type="button" class="btn btn-danger remove-client" oid="$client.oid">$templateUtils.getTranslation("Remove")</button></td>
                                </tr>
                                #end
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-lg-3">
                    <input class="form-control" id="newClientName" placeholder="$templateUtils.getTranslation("Client Name")"/>
                </div>
                <div class="col-lg-1">
                    <button type="button" class="btn btn-success save-button" id="addNewClient">$templateUtils.getTranslation("Add")</button>
                </div>
            </div>

            </br></br>

            <div id="addedClientSuccess" class="alert alert-info center-absolute center-screen"
                 style="display: none;  width: 500px">
                <strong>$templateUtils.getTranslation("Client Added Successfuly")</strong>
            </div>
            <div id="addedClientFailure" class="alert alert-danger center-absolute center-screen"
                 style="display: none;  width: 200px">
                <strong>$templateUtils.getTranslation("Error Adding Client")</strong>
            </div>

            <div id="clientExists" class="alert alert-danger center-absolute center-screen"
                 style="display: none;  width: 350px">
                <strong>$templateUtils.getTranslation("There Is Already Client By That Name")</strong>
            </div>

            <div id="removeClientFailure" class="alert alert-danger center-absolute center-screen"
                 style="display: none;  width: 200px">
                <strong>$templateUtils.getTranslation("Error Removing Client")</strong>
            </div>


        </div>




    </div>

</div>
<div style="display: none" id="changesSaved" saved="true"></div>
    #parse("unsaved_changes_message.vm")


</body>

<script type="text/javascript">
    $(function () {
        $('#container').highcharts({
            chart: {
                type: 'line'
            },
            title: {
                text: null
            },
            xAxis: {
                categories:         [
                    #set($i = 0)
                    #foreach($date in $sumDebtsByDate.keySet())
                        #set($i = $i + 1)
                        '$templateUtils.formatDateExcludeTime($date)'
                        #if($i != $sumDebtsByDate.size())
                            ,
                        #end
                    #end
                ]

            },
            yAxis: {
                title: {
                    text: '$templateUtils.getTranslation("Debt")'
                }
            },
            plotOptions: {
                line: {
                    dataLabels: {
                        enabled: true
                    },
                    enableMouseTracking: false
                }
            },
            series:
                    [{
                        showInLegend: false,
                        name: null,
                        data:[
                            #set($i = 0)
                            #foreach($date in $sumDebtsByDate.keySet())
                                #set($i = $i + 1)
                                $sumDebtsByDate.get($date)
                                #if($i != $sumDebtsByDate.size())
                                    ,
                                #end
                            #end
                        ]
                    }]


        });
    });
</script>


</html>
