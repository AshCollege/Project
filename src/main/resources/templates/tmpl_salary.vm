#* @vtlvariable name="hishgadPackages" type="java.util.ArrayList<com.example.Objects.HishgadPackageObject>" *#
#* @vtlvariable name="historyOrders" type="java.util.ArrayList<com.example.Objects.OrderObject>" *#
#* @vtlvariable name="clients" type="java.util.ArrayList<com.example.Objects.ClientObject>" *#
#* @vtlvariable name="dailySalaryObjectList" type="java.util.ArrayList<com.example.Objects.DailySalaryObject>" *#
#* @vtlvariable name="templateUtils" type="com.example.Utils.TemplateUtils" *#

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>$pageName</title>
    #parse( "css.vm" )
    #parse( "scripts.vm" )
</head>

<body>

<div id="wrapper" style="padding-right: 135px">

    #parse( "main_navbar.vm" )

    <div id="page-wrapper">

        #parse("date_section.vm")

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        <small>$pageName</small>
                    </h1>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-3">
                    <div class="alert alert-warning">
                        <strong>$templateUtils.getTranslation("Monthly Lotto:") </strong> <span id="monthlyLotto"> $templateUtils.round($monthlySalaryLotto,2) </span>
                    </div>
                </div>
                <div class="col-lg-3" id="monthlyHishgadSalesSalary" style="display: none">
                    <div class="alert alert-warning">
                        <strong>$templateUtils.getTranslation("Monthly Hishgad:") </strong> <span id="monthlyHishgad"> $templateUtils.round($monthlySalaryHishgad, 2) </span>
                    </div>
                </div>
                <div class="col-lg-3" id="monthlyHishgadPurchaseSalary">
                    <div class="alert alert-warning">
                        <strong>$templateUtils.getTranslation("Monthly Hishgad:") </strong> <span id="monthlyHishgadByPurcase"> $templateUtils.round($monthlySalaryHishgadByPurchase, 2) </span>
                    </div>
                </div>
                <div class="col-lg-3" id="monthlySalesSalary" style="display: none">
                    <div class="alert alert-warning">
                        <strong>$templateUtils.getTranslation("Monthly Total:") </strong> <span id="monthlyTotal"> $templateUtils.round($monthlySalaryTotal, 2) </span>
                    </div>
                </div>
                <div class="col-lg-3" id="monthlyPurchaseSalary">
                    <div class="alert alert-warning">
                        <strong>$templateUtils.getTranslation("Monthly Total:") </strong> <span id="monthlyTotalByPurchase"> $templateUtils.round($monthlySalaryTotalByPurchase, 2) </span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <h2>$templateUtils.getTranslation("Current Month Salary")</h2>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>$templateUtils.getTranslation("Date") </th>
                                <th>$templateUtils.getTranslation("Lotto Fee")</th>
                                <th id="feeBySales" style="display: none">$templateUtils.getTranslation("Hishgad Fee (Sales)")
                                    <button type="button" class="btn btn-info salary-type">$templateUtils.getTranslation("By Purchases")</button>
                                </th>
                                <th id="feeByPurchase">$templateUtils.getTranslation("Hishgad Fee (Purcahses)")
                                    <button type="button" class="btn btn-info salary-type">$templateUtils.getTranslation("By Sales")</button>
                                </th>
                                <th id="sumBySales" style="display: none">$templateUtils.getTranslation("Sum") </th>
                                <th id="sumByPurchase">$templateUtils.getTranslation("Sum") </th>
                            </tr>
                            </thead>
                            <tbody>
                                #foreach($dailySalaryObject in $dailySalaryObjectList)
                                <tr>
                                    <td>$templateUtils.formatDateExcludeTime($dailySalaryObject.date)</td>
                                    <td>$templateUtils.round($dailySalaryObject.lottoFee,2)</td>
                                    <td class="fee-by-sales" style="display: none">$templateUtils.round($dailySalaryObject.hishgadFee,2)</td>
                                    <td class="fee-by-purchase">$templateUtils.round($dailySalaryObject.hishgadPurchaseFee,2)</td>
                                    <td class="sum-by-sales" style="display:none;">$templateUtils.round($dailySalaryObject.getDailyTotalFee(),2)</td>
                                    <td class="sum-by-purchase">$templateUtils.round($dailySalaryObject.getDailyTotalFeeByPurcahse(),2)</td>
                                </tr>
                                #end
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row">
                <a href="/salary-history.html">
                    <button type="button" class="btn btn-warning">$templateUtils.getTranslation("Salary History")</button>
                </a>
            </div>


        </div>

    </div>

</div>
<div style="display: none" id="changesSaved" saved="true"></div>
    #parse("unsaved_changes_message.vm")


</body>

</html>
