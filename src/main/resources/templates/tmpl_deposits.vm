#* @vtlvariable name="hishgadPackages" type="java.util.ArrayList<com.example.Objects.HishgadPackageObject>" *#
#* @vtlvariable name="historyOrders" type="java.util.ArrayList<com.example.Objects.OrderObject>" *#
#* @vtlvariable name="clients" type="java.util.ArrayList<com.example.Objects.ClientObject>" *#
#* @vtlvariable name="deposit" type="com.example.Objects.DepositObject" *#
#* @vtlvariable name="depositsHistory" type="java.util.ArrayList<com.example.Objects.DepositObject>" *#
#* @vtlvariable name="templateUtils" type="com.example.Utils.TemplateUtils" *#

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>$pageName</title>
    #parse( "css.vm" )
    #parse( "scripts.vm" )
</head>

<body>

<div id="wrapper" style="padding-right: 135px">

    #parse( "main_navbar.vm" )

    <div id="page-wrapper">

        #parse("date_section.vm")

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        <small>$pageName</small>
                    </h1>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <h2>$templateUtils.getTranslation("Today's Deposit")</h2>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>$templateUtils.getTranslation("Type") </th>
                                <th>$templateUtils.getTranslation("Amount") </th>
                                <th>$templateUtils.getTranslation("Comment")</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td id="depositTypeCheck">
                                    $templateUtils.getTranslation("Check")
                                </td>
                                <td >
                                    <input id="depositAmountCheck" type="number" #if($deposit) value="$deposit.amountCheck" #else value="0" #end class="form-control"/>
                                </td>
                                <td>
                                    <input id="depositCommentCheck" #if($deposit) value="$deposit.checkComment" #end class="form-control"/>
                                </td>
                            </tr>
                            <tr>
                                <td id="depositTypeCash">
                                    $templateUtils.getTranslation("Cash")
                                </td>
                                <td >
                                    <input id="depositAmountCash" type="number" #if($deposit) value="$deposit.amountCash" #else value="0" #end class="form-control"/>
                                </td>
                                <td>
                                    <input id="depositCommentCash" #if($deposit) value="$deposit.cashComment" #end class="form-control"/>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-2">
                    <button type="button" class="btn btn-success save-button" id="saveDeposit">$templateUtils.getTranslation("Save")</button>
                </div>
            </div>



            <div class="row">
                <div class="col-lg-8">
                    <h2>$templateUtils.getTranslation("Previous Deposits")</h2>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>$templateUtils.getTranslation("Date") </th>
                                <th>$templateUtils.getTranslation("Amount Check") </th>
                                <th>$templateUtils.getTranslation("Comment Check")</th>
                                <th>$templateUtils.getTranslation("Amount Cash") </th>
                                <th>$templateUtils.getTranslation("Comment Cash")</th>
                            </tr>
                            </thead>
                            <tbody>
                            #foreach($deposit in $depositsHistory)
                            <tr>
                                <td>$templateUtils.formatDateExcludeTime($deposit.date)
                                </td>
                                <td>$deposit.amountCheck
                                </td>
                                <td>$deposit.checkComment
                                </td>
                                <td>$deposit.amountCash
                                </td>
                                <td>$deposit.cashComment
                                </td>
                            </tr>
                            #end
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>



            <div id="AddedDepositSuccess" class="alert alert-info center-absolute center-screen"
                 style="display: none;  width: 500px">
                <strong>$templateUtils.getTranslation("Deposit Added Successfully")</strong>
            </div>
            <div id="AddedDepositFailure" class="alert alert-danger center-absolute center-screen"
                 style="display: none;  width: 200px">
                <strong>$templateUtils.getTranslation("Failure Adding Deposit")</strong>
            </div>

        </div>

    </div>

</div>
<div style="display: none" id="changesSaved" saved="true"></div>
    #parse("unsaved_changes_message.vm")


</body>

</html>
