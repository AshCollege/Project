#* @vtlvariable name="hishgadPackages" type="java.util.ArrayList<com.example.Objects.HishgadPackageObject>" *#
#* @vtlvariable name="templateUtils" type="com.example.Utils.TemplateUtils" *#
#* @vtlvariable name="hishgadPackageObjectList" type="java.util.ArrayList<com.example.Objects.HishgadPackageObject>" *#
#* @vtlvariable name="clientObjectList" type="java.util.ArrayList<com.example.Objects.ClientObject>" *#
#* @vtlvariable name="sum" type="java.lang.Double" *#
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>$pageName</title>
    #parse( "css.vm" )
    #parse( "scripts.vm" )
</head>

<body>

<div id="wrapper" style="padding-right: 135px">

    #parse( "main_navbar.vm" )

    <div id="page-wrapper">

        #parse("date_section.vm")

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        <small>$pageName</small>
                    </h1>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-2">
                    <button type="button" class="btn btn-info" id="printButton" style="">$templateUtils.getTranslation("Print")</button>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <h2>$templateUtils.getTranslation("Sum Of All Debts:", "$sum")</h2>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>$templateUtils.getTranslation("Name") </th>
                                <th>$templateUtils.getTranslation("Debt") </th>
                            </tr>
                            </thead>
                            <tbody>
                                #foreach($client in $clientObjectList)
                                <tr>
                                    <td>$client.name
                                    </td>
                                    <td>$client.debt
                                    </td>
                                </tr>
                                #end
                            </tbody>
                        </table>
                    </div>

                </div>
                <div class="col-lg-6">
                    <h2>$templateUtils.getTranslation("Hishgad Tickets")</h2>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>$templateUtils.getTranslation("Name") </th>
                                <th>$templateUtils.getTranslation("Tickets Remaining") </th>
                            </tr>
                            </thead>
                            <tbody>
                                #foreach($hishgadPackage in $hishgadPackageObjectList)
                                <tr>
                                    <td>$hishgadPackage.name
                                    </td>
                                    <td>$hishgadPackage.remaining
                                    </td>
                                </tr>
                                #end
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>




        </div>

    </div>

</div>

<div id="print" style="direction:rtl; font-family: Helvetica Neue, Helvetica, Arial, sans-serif; display: none">
    <div></div>
    <div style="width:45%;float:right;">
        <h3>$templateUtils.getTranslation("Sum Of All Debts:", "$sum")</h3>
        <table>
            <tr>
                <th>$templateUtils.getTranslation("Debt")</th>
                <th>$templateUtils.getTranslation("Name")</th>
            </tr>
            #foreach($client in $clientObjectList)
                <tr>
                    <td>$client.debt
                    </td>
                    <td>$client.name
                    </td>
                </tr>
            #end
        </table>

    </div>

    <div style="width:45%;float:right;">
        <h3>$templateUtils.getTranslation("Hishgad Tickets")</h3>
        <table>
            <tr>
                <th>$templateUtils.getTranslation("Debt")</th>
                <th>$templateUtils.getTranslation("Name")</th>
            </tr>
            #foreach($hishgadPackage in $hishgadPackageObjectList)
                <tr>
                    <td>$hishgadPackage.remaining
                    </td>
                    <td>$hishgadPackage.name
                    </td>
                </tr>
            #end
        </table>
    </div>
</div>

<div style="display: none" id="changesSaved" saved="true"></div>
    #parse("unsaved_changes_message.vm")

</body>

</html>
